{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@common/exceptions/*": ["src/common/exceptions/*"],
      "@common/interceptors/*": ["src/common/interceptors/*"],
      "@migrations/*": ["src/migrations/*"]
    }
  }
}
